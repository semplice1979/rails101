<div class="col-md-12">

  <th class="text-center"> <b>結案區</b></th>


  <div class="group">
  <table class="table">
    <tbody>
      <tr>
        <td width="50">id</td>
        <td width="60">Platform </td>
        <td width="40">Pri </td>
        <td width="80">category</td>
        <td width="400">content</td>
        <td width="100">status</td>      
        
        <td width="400">comment</td>
        <td width="150">Edit</td>           
      </tr>
      <tr>
        <td> 
        <%#= select_tab "status", option_for_select(@product.map { |value| }) %>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
                  <%= select_tag "product", options_for_select(@products, @selected_product) %>
        </td>      
        <td><%= @selected_product %>
          
         </td>
      </tr>

  <% @posts.each do |post| %> 
      <% if post.status == "close" %>
      <% else %>
        <% if post.status == "suggest" %>
        <% else %>
          <% next %>
        <% end %>
      <% end %>
    <tr>
      <td>      
          <%= link_to("#{post.id}", 
                group_post_path(post.group, post), 
                :class => "btn btn-default btn-xs")%>  </td> 
      <td>    <%= post.explorer %> </td>
      <td>    <%= post.priority %> </td>
      <td>    <%= post.category %> </td>
      <td>    <%= post.content %>  </td>
      <td>    <%= post.status %>   </td>

      <% if @group.editable_by?(current_user) %>
        <td><%= post.comment %></td>
        <td>
        <%= link_to('Edit', 
                  edit_group_post_path(post.group, post), 
                  :class => "btn btn-info btn-xs") %>
        <%= link_to('Delete', 
                  group_post_path(post.group, post),
                  :method => :delete, 
                  data: { confirm: "Are you sure?" },
                  :class => "btn btn-danger btn-xs") %>
        </td>
      <% else %>
        <td><%= post.comment %></td>      
      <% end %> 
    </tr>
  <% end %>      
    </tbody>
  </table>
  </div>
</div>


<div class="container">
<%# params.each do |key, value| %>
  <%#= content_tag(:div, key, class: "alert alert-#{key}") %>
<%# end %>
</div>



