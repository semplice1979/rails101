<div class="span12">

<%= form_for [@group,@post] do |f| %>

<%= f.label :content, "Content" %>
<%= f.text_field :content, :input_html => { :class => "input-xxlarge"} %>
<br>
<div class="form-actions">
<%= f.submit "Submit", :disable_with => 'Submiting...', :class => "btn btn-primary" %>
</div>
<% end %>

</div>