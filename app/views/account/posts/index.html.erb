<div class="col-md-12">

  <h2 class="text-center"> The POST that I've post </h2>

  <table class="table">
    <thead>
      <tr>
        <th width="50">id</th>
        <th width="100"> Group Name </th>
        <th width="500"> Content </th>
        <td width="100">status</td>

        <th width="100"> Last Update </th>
        <td width="400">comment</td>
        <td width="150">Edit</td>
        <th width="500"> </th>
        <th colspan="2"></th>

      </tr>
    </thead>
    
    <tbody>
      <% @posts.each do |post| %>
        <tr>
      <td>      
          <%= link_to("#{post.id}", 
                group_post_path(post.group, post), 
                :class => "btn btn-default btn-xs")%>  </td>         

          <td> <%= post.group.title %> </td>                 
          <td> <%= post.content %>     </td> 
          <td> <%= post.status %>      </td>
          <td> 
          <%  a = post.updated_at.to_s  %>
          <%= a[2..10] %> </td>
          <td><%= post.comment %></td>
          <td> <%= link_to('Edit', 
                           edit_group_post_path(post.group, post), 
                           :class => "btn btn-info btn-xs") %>
          <%= link_to('Delete', 
                          group_post_path(post.group, post),
                          :method => :delete, 
                          data: { confirm: "Are you sure?" },
                          :class => "btn btn-danger btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>