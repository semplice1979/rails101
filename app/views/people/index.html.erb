
<h1>Listing people</h1>
<li></li>
 
  <table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Birthday</th>
      <th colspan="3">EDIT</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td width="80"><%= person.name %></td>
        <td width="250"><%= person.bio %></td>
        <td width="150"><%= person.birthday %></td>
        <td width="80"><%= link_to 'Show', person %></td>
        <td width="80"><%= link_to 'Edit', edit_person_path(person) %></td>
        <td width="80"><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

